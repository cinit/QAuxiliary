    <!-- Base application theme. -->
    <style name="AppTheme.Def" parent="Theme.MaiTungTMDesign.DayNight">
        <item name="backgroundColor">@color/defaultThemeBackgroundColor</item>
        <item name="backgroundColorAlphaTitle">@color/defaultThemeBackgroundColorAlpha80</item>
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <!-- color forwarding -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">?attr/themeColor</item>
        <item name="colorOnPrimary">@color/firstTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">?attr/themeColor</item>
        <item name="colorSecondaryVariant">?attr/themeColor</item>
        <item name="colorOnSecondary">@color/firstTextColor</item>
        <!-- Status bar color. -->
        <item name="android:windowDrawsSystemBarBackgrounds">@bool/is_sdk_eg_m_23</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">
            shortEdges
        </item>
        <item name="android:statusBarColor">?attr/backgroundColor</item>
        <item name="android:windowTranslucentStatus">@bool/is_not_sdk_eg_m_23</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">@bool/is_not_night_mode</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">@bool/is_not_night_mode</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTranslucentNavigation">@bool/is_not_sdk_eg_m_23</item>
        <item name="colorControlNormal">@color/firstTextColor</item>
        <!--<item name="colorControlNormal">@color/whiteTextColor</item> -->
    </style>

