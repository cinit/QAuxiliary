<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="start|top"
            android:text="总开关"
            android:textColor="?attr/colorAccent"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/checkboxEnableCustomSplash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginHorizontal="20dp"
            android:text="启用自定义启动图" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divideColor" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:gravity="start|top"
            android:text="亮色主题启动图"
            android:textColor="?attr/colorAccent"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/radioGroupLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioButtonLightAppDefault"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="APP 默认" />

            <RadioButton
                android:id="@+id/radioButtonLightCustom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="自定义图片" />

        </RadioGroup>

        <LinearLayout
            android:id="@+id/layoutLightCustomLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewCustomSplashLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="20dp"
                android:adjustViewBounds="true"
                android:contentDescription="亮色主题启动图"
                android:maxHeight="200dp"
                android:saveEnabled="false"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/textViewCustomSplashLightStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="20dp"
                android:text="未选择图片"
                android:textColor="@color/firstTextColor"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editTextCustomSplashLightPath"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:hint="请输入图片路径"
                android:inputType="text"
                android:maxLines="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonCustomSplashLightLoadFile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_ripple_r8"
                    android:text="加载"
                    android:textColor="?attr/colorAccent" />

                <Button
                    android:id="@+id/buttonCustomSplashLightBrowse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_ripple_r8"
                    android:text="浏览..."
                    android:textColor="?attr/colorAccent" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divideColor" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:gravity="start|top"
            android:text="暗色主题启动图"
            android:textColor="?attr/colorAccent"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/radioGroupDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioButtonSameAsLight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="使用亮色主题启动图" />

            <RadioButton
                android:id="@+id/radioButtonDarkCustom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="自定义图片" />

        </RadioGroup>

        <LinearLayout
            android:id="@+id/linearLayoutDarkCustomLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewCustomSplashDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="20dp"
                android:adjustViewBounds="true"
                android:contentDescription="暗色主题启动图"
                android:maxHeight="200dp"
                android:saveEnabled="false"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/textViewCustomSplashDarkStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="20dp"
                android:text="未选择图片"
                android:textColor="@color/firstTextColor"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editTextCustomSplashDarkPath"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:hint="请输入图片路径"
                android:inputType="text"
                android:maxLines="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonCustomSplashDarkLoadFile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_ripple_r8"
                    android:text="加载"
                    android:textColor="?attr/colorAccent" />

                <Button
                    android:id="@+id/buttonCustomSplashDarkBrowse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_ripple_r8"
                    android:text="浏览..."
                    android:textColor="?attr/colorAccent" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divideColor" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonCustomSplashSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@drawable/bg_ripple_rect"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_done"
            android:gravity="start|center_vertical"
            android:minHeight="48dp"
            android:text="保存"
            android:textColor="?attr/colorAccent"
            app:drawableTint="?attr/colorAccent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonCustomSplashCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@drawable/bg_ripple_rect"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_close_24"
            android:gravity="start|center_vertical"
            android:minHeight="48dp"
            android:text="取消"
            android:textColor="?attr/colorAccent"
            app:drawableTint="?attr/colorAccent" />

    </LinearLayout>

</ScrollView>
